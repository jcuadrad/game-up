{
    "extends": "standard",
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "document": false,
        "window": false,
        "console": false
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}